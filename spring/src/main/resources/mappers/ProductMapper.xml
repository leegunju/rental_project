<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myweb.www.repository.ProductDAO">
	<insert id="insert" parameterType="com.myweb.www.domain.ProductVO">
		insert into product(type_a, pname, price, content)
		values(#{type_a}, #{pname}, #{price}, #{content})
	</insert>
	<select id="getList" resultType="com.myweb.www.domain.ProductVO">
		select * from product
		where type_a=#{type_a}
		order by pno desc 
	</select>
	<select id="selectPno" resultType="int">
		select max(pno) from product
	</select>
	<select id="isThere" resultType="com.myweb.www.domain.ProductVO">
		select * from product
	</select>
	<select id="getDetail" resultType="com.myweb.www.domain.ProductVO">
		select * from product where pno=#{pno}
	</select>
	<select id="getTotalCount" resultType="int">
    select count(pno) from product where pno>0 
    <include refid="search"></include>
	</select>
	<select id="getAdminList" resultType="com.myweb.www.domain.ProductVO">
	    select a.pno, type_a, pname, price, content from (
	    select pno from product where pno>0 
	    <include refid="search"></include>
	    order by pno desc
	    limit #{pageStart}, #{qty}
	    ) a left join product b
	    on a.pno=b.pno
	</select>
	<sql id="search">
	    <if test="type != null">
	       <trim prefix="and (" suffix=")" prefixOverrides="OR">
	          <foreach collection="typeToArray" item="type">
	             <trim prefix="OR">
	                <choose>
	                    <when test="type == 'p'.toString()">
	                        pname like concat('%', #{keyword}, '%')
	                    </when>
	                    <when test="type == 'c'.toString()">
	                        content like concat('%', #{keyword}, '%')
	                    </when>
	                </choose>
	             </trim>
	          </foreach>
	       </trim>
	    </if>
	 </sql>
	<update id="updateProduct">
		update product set type_a=#{type_a}, pname=#{pname}, price=#{price}, content=#{content} where pno=#{pno}
	</update>
	<select id="getSearchList" resultType="com.myweb.www.domain.ProductVO">
		 select * from product where content like concat('%', #{searchKeyword}, '%')
	</select>
	<delete id="delete">
		delete from product where pno=#{pno}
	</delete>
</mapper>